# ---------------------------- IMPORTANT ----------------------------
# This is a template for environment variables.
# Copy this file to ".env" and update values before running the app.
# Do NOT commit your actual ".env" file to git.

# ---------------------------- App Config ----------------------------
# Enable/disable debug mode (True/False)
DEBUG=True

# ---------------------------- Database Config ----------------------------
# Format: postgresql+asyncpg://<username>:<password>@<host>:<port>/<database>
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/mydatabase"

# ---------------------------- JWT Config ----------------------------
# Secret key for JWT signing (replace with a strong random string in production)
SECRET_KEY="change_me_in_production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=43200
JWT_ALGORITHM="HS256"

# ---------------------------- OAuth2 / Gmail Config ----------------------------
# Google Cloud OAuth2 credentials (replace with real values from Google Cloud Console)
GMAIL_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GMAIL_CLIENT_SECRET="your_google_client_secret"
GMAIL_REDIRECT_URI="http://localhost:8000/auth/callback"

# ---------------------------- Redis Config ----------------------------
REDIS_URL="redis://localhost:6379/0"

# ---------------------------- Celery Config ----------------------------
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# ---------------------------- Rate Limiter Config ----------------------------
LOGIN_LOCKOUT_TIME=300
MAX_FAILED_LOGIN_ATTEMPTS=5
MAX_REQUESTS_PER_WINDOW=100
REQUEST_WINDOW_SECONDS=60
